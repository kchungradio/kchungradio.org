{
  "name": "kchung-radio",
  "version": 2,
  "scope": "kchungradio",
  "regions": ["pdx"],
  "env": {
    "PGHOST": "@pg-host",
    "PGPORT": "5432",
    "PGDATABASE": "kchung",
    "PGUSER": "archive_api",
    "PGPASSWORD": "@pg-password-archive_api"
  },
  "routes": [
    {
      "src": "/api.*",
      "headers": { "Cache-Control": "s-maxage=300, max-age=0" },
      "continue": true
    },
    { "src": "/stream2.html", "dest": "/stream/2" },
    { "src": "/([^/]+).html", "dest": "/$1" },
    { "src": "/wiki(.*)", "dest": "wiki.kchungradio.org$1" },
    { "src": "/Talking-Show(.*)", "dest": "talking-show.kchungradio.org$1" },
    { "src": "/([^/]+).(jpg|png|ico|svg)", "dest": "/img/$1.$2" }
  ]
}
